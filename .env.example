# Rusty Butter Multi-Agent System Environment Variables
# Copy this to .env and fill in your values

# ============================================
# REQUIRED - System won't work without these
# ============================================

# ElevenLabs - For text-to-speech
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Discord - For Discord bot monitoring
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD=your_discord_guild_id_here

# ============================================
# OPTIONAL - Enhanced functionality
# ============================================

# Twitch - Only needed if you want the bot to send messages
# Without these, Twitch monitor runs in read-only mode
TWITCH_USERNAME=your_twitch_bot_username
TWITCH_OAUTH=oauth:your_twitch_oauth_token
TWITCH_CHANNEL=codingbutter  # Default channel to monitor

# OpenAI - If you want to use OpenAI MCP server
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic - For Claude API if needed
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_DIR=./logs

# Queue System
QUEUE_DIR=./queues
QUEUE_CLEANUP_INTERVAL=300000  # 5 minutes in ms

# Node Environment
NODE_ENV=development  # development, production

# PM2 Configuration
PM2_MAX_MEMORY_RESTART=500M
PM2_MIN_UPTIME=10s
PM2_MAX_RESTARTS=5

# Monitor Configuration
MONITOR_SPAWN_COOLDOWN=2000  # ms between Claude spawns
MONITOR_MIN_MESSAGE_LENGTH=3  # Minimum message length to process

# Orchestrator Configuration
ORCHESTRATOR_MAX_CONCURRENT=3  # Max concurrent actions
ORCHESTRATOR_QUEUE_CHECK_INTERVAL=5000  # ms

# ============================================
# MCP SERVER URLS (if using custom endpoints)
# ============================================

# Leave these empty to use default stdio connections
MCP_SEMANTIC_MEMORY_URL=
MCP_RUSTYBUTTER_AVATAR_URL=
MCP_ELEVENLABS_URL=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Debug Mode - Enables verbose logging
DEBUG=false

# Test Mode - Uses mock services
TEST_MODE=false

# Dry Run - Processes but doesn't execute actions
DRY_RUN=false