{
  "name": "rusty-butter-multi-agent",
  "version": "0.1.0",
  "description": "Multi-agent streaming system for Rusty Butter",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:twitch": "pnpm --filter @rusty-butter/twitch-monitor dev",
    "dev:discord": "pnpm --filter @rusty-butter/discord-monitor dev",
    "dev:orchestrator": "pnpm --filter @rusty-butter/orchestrator dev",
    "build": "pnpm -r build",
    "start": "pm2 start ecosystem.config.ts",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "status": "pm2 status",
    "test": "./test-system.sh",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "install:all": "pnpm install",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "clean:logs": "rm -rf logs/*.log",
    "clean:queues": "rm -rf queues/*.json"
  },
  "devDependencies": {
    "dotenv": "^17.2.1",
    "pm2": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.8.1"
  }
}